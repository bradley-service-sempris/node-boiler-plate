{
	"paths": {},
	"compilerOptions": {
		// "allowSyntheticDefaultImports": true,

		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"module": "commonjs",
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"outDir": "./dist"
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}